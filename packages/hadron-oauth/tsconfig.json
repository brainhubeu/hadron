{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSources": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*.*", "index.ts", "LICENSE"],
  "exclude": ["node_modules", "**/__tests__/**", "**/*/*.d.ts"]
}
